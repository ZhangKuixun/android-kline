<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey">

    <RelativeLayout
        android:id="@+id/rl_UnFocus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:text="BTC/USDT"
            android:textColor="@color/darkBlueGrey"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/tv_currency"
            android:gravity="center_vertical"
            android:text="-0.00005"
            android:textColor="@color/topaz"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_riseAndFall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/tv_price"
            android:gravity="center_vertical"
            android:text="0.013244"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_riseAndFall1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/tv_riseAndFall"
            android:gravity="center_vertical"
            android:text="-0.00%"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_28"
            android:layout_toStartOf="@+id/back"
            android:gravity="center_vertical"
            android:text="2018/05/11 15:01:01"
            android:textColor="@color/darkBlueGrey"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@color/darkBlueGrey" />
    </RelativeLayout>

    <com.guoziwei.klinelib.chart.LineChartInfoView
        android:id="@+id/line_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent" />

    <com.guoziwei.klinelib.chart.AppLineChart
        android:id="@+id/price_chart"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/vol_chart"
        app:layout_constraintDimensionRatio="W,2:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_UnFocus"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.guoziwei.klinelib.chart.AppCombinedChart
        android:id="@+id/vol_chart"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/price_chart"
        app:layout_constraintRight_toRightOf="@+id/price_chart"
        app:layout_constraintTop_toBottomOf="@+id/price_chart" />

</android.support.constraint.ConstraintLayout>